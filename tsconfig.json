{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "nodenext",
    "target": "es2022",
    "outDir": "dist",
    "sourceMap": false,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
